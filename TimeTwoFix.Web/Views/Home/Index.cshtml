@{
    ViewData["Title"] = "Welcome to TimeTwoFix";
}

<div class="container mt-5 text-center">
    <h1 class="display-4 fw-bold text-primary">🛠️ TimeTwoFix</h1>
    <p class="lead text-muted">Your trusted platform for managing vehicles, appointments, and client records.</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="p-4 bg-white shadow-sm rounded">
                <i class="bi bi-car-front fs-1 text-info"></i>
                <h5 class="mt-3">Vehicle Records</h5>
                <p class="text-muted">Store and review technical details, mileage, and registration data effortlessly.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 bg-white shadow-sm rounded">
                <i class="bi bi-calendar-check fs-1 text-success"></i>
                <h5 class="mt-3">Scheduled Appointments</h5>
                <p class="text-muted">Keep track of inspections, repairs, and upcoming visits in one unified view.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 bg-white shadow-sm rounded">
                <i class="bi bi-people fs-1 text-secondary"></i>
                <h5 class="mt-3">Client Directory</h5>
                <p class="text-muted">Stay connected with customers and understand their vehicle history clearly.</p>
            </div>
        </div>
    </div>

    <div class="mt-5 text-muted small">
        <p>Need help getting started? Explore documentation or reach out to support.</p>
        <p>Last updated: @DateTime.Now.ToString("MMMM yyyy")</p>
    </div>
</div>
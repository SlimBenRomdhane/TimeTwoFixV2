@model TimeTwoFix.Web.Models.VehicleModels.ReadVehicleViewModel

@{
    ViewData["Title"] = "Vehicle Details";
}

<div class="container mt-4">
    <h1 class="text-center text-primary">Vehicle Details</h1>
    <p class="text-center text-muted">Full specification of the selected vehicle along with its owner.</p>

    <div class="card shadow-sm bg-light p-4">
        <div class="card-body">
            <div class="p-3 bg-white rounded">

                <h5 class="mb-3 text-secondary"><i class="bi bi-person-fill"></i> Client Info</h5>
                <dl class="row">
                    <dt class="col-sm-4 text-muted">Client Name:</dt>
                    <dd class="col-sm-8">@Model.ReadClientViewModel?.FirstName @Model.ReadClientViewModel?.LastName</dd>

                    <dt class="col-sm-4 text-muted">Email:</dt>
                    <dd class="col-sm-8">@Model.ReadClientViewModel?.Email</dd>

                    <dt class="col-sm-4 text-muted">Phone:</dt>
                    <dd class="col-sm-8">@Model.ReadClientViewModel?.PhoneNumber</dd>
                </dl>

                <hr />

                <h5 class="mb-3 text-secondary"><i class="bi bi-car-front-fill"></i> Vehicle Specifications</h5>
                <dl class="row">
                    <dt class="col-sm-4 text-muted">VIN:</dt>
                    <dd class="col-sm-8">@Model.Vin</dd>

                    <dt class="col-sm-4 text-muted">Brand:</dt>
                    <dd class="col-sm-8">@Model.Brand</dd>

                    <dt class="col-sm-4 text-muted">Model:</dt>
                    <dd class="col-sm-8">@Model.Model</dd>

                    <dt class="col-sm-4 text-muted">License Plate:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info text-dark">@Model.LicensePlate</span>
                    </dd>

                    <dt class="col-sm-4 text-muted">Fuel Type:</dt>
                    <dd class="col-sm-8">@Model.FuelType</dd>

                    <dt class="col-sm-4 text-muted">Transmission:</dt>
                    <dd class="col-sm-8">@Model.TransmissionType</dd>

                    <dt class="col-sm-4 text-muted">Year:</dt>
                    <dd class="col-sm-8">@Model.Year</dd>

                    <dt class="col-sm-4 text-muted">Mileage:</dt>
                    <dd class="col-sm-8">@Model.Mileage.ToString("N0") km</dd>
                </dl>
            </div>

            <div class="d-flex justify-content-center mt-4 gap-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Edit Vehicle
                </a>
            </div>
        </div>
    </div>
</div>
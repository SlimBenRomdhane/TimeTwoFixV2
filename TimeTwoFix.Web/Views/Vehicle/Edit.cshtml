@model TimeTwoFix.Web.Models.VehicleModels.UpdateVehicleViewModel

@{
    ViewData["Title"] = "Edit Vehicle";
    Layout = "_Layout"; // Modify if you're using a different layout
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Update Vehicle Info</h4>
                    <a asp-action="Index" class="btn btn-sm btn-light">← Back</a>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Id" class="form-label text-muted">Vehicle ID</label>
                                <input asp-for="Id" class="form-control" disabled />
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ClientId" class="form-label">Client</label>
                                <select asp-for="ClientId" asp-items="ViewBag.Clients" class="form-select"></select>
                                <span asp-validation-for="ClientId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Vin" class="form-label">VIN</label>
                                <input asp-for="Vin" class="form-control" />
                                <span asp-validation-for="Vin" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Brand" class="form-label">Brand</label>
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Model" class="form-label">Model</label>
                                <input asp-for="Model" class="form-control" />
                                <span asp-validation-for="Model" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LicensePlate" class="form-label">License Plate</label>
                                <input asp-for="LicensePlate" class="form-control" placeholder="e.g. 123 Tunis 4567" />
                                <span asp-validation-for="LicensePlate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="FuelType" class="form-label">Fuel Type</label>
                                <select asp-for="FuelType" asp-items="ViewBag.FuelTypes" class="form-select"></select>
                                <span asp-validation-for="FuelType" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="TransmissionType" class="form-label">Transmission</label>
                                <select asp-for="TransmissionType" asp-items="ViewBag.TransmissionTypes" class="form-select"></select>
                                <span asp-validation-for="TransmissionType" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Year" class="form-label">Year</label>
                                <input asp-for="Year" class="form-control" />
                                <span asp-validation-for="Year" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Mileage" class="form-label">Mileage (km)</label>
                                <input asp-for="Mileage" class="form-control" />
                                <span asp-validation-for="Mileage" class="text-danger small"></span>
                            </div>
                            <!-- Notes -->
                            <div class="mb-3">
                                <label asp-for="Notes" class="form-label">Notes</label>
                                <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Add any relevant notes..."></textarea>
                                <span asp-validation-for="Mileage" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-4 d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <small class="text-muted">
                    Make sure all fields reflect the latest vehicle details before saving.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model TimeTwoFix.Web.Models.VehicleModels.CreateVehicleViewModel

@{
    ViewData["Title"] = "Create Vehicle";
}

<h2 class="mb-4 text-primary">🛠️ Create a New Vehicle</h2>

<div class="card shadow">
    <div class="card-body">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Client -->
            <div class="mb-3">
                <label asp-for="ClientId" class="form-label">Client</label>
                <select asp-for="ClientId" class="form-select" asp-items="ViewBag.Clients">
                    <option value="">-- Select Client --</option>
                </select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>

            <!-- VIN -->
            <div class="mb-3">
                <label asp-for="Vin" class="form-label">VIN</label>
                <input asp-for="Vin" class="form-control" maxlength="17" minlength="17"
                       pattern="[A-HJ-NPR-Z0-9]{17}"
                       title="Enter exactly 17 alphanumeric characters. Letters I, O, and Q are not allowed." />
                <span asp-validation-for="Vin" class="text-danger"></span>
            </div>

            <!-- Brand -->
            <div class="mb-3">
                <label asp-for="Brand" class="form-label">Brand</label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <!-- Model -->
            <div class="mb-3">
                <label asp-for="Model" class="form-label">Model</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <!-- License Plate -->
            <div class="mb-3">
                <label asp-for="LicensePlate" class="form-label">License Plate</label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>

            <!-- Fuel Type -->
            <div class="mb-3">
                <label asp-for="FuelType" class="form-label">Fuel Type</label>
                <select asp-for="FuelType" class="form-select" asp-items="ViewBag.FuelTypes">
                    <option value="">-- Select Fuel Type --</option>
                </select>
                <span asp-validation-for="FuelType" class="text-danger"></span>
            </div>

            <!-- Transmission Type -->
            <div class="mb-3">
                <label asp-for="TransmissionType" class="form-label">Transmission Type</label>
                <select asp-for="TransmissionType" class="form-select" asp-items="ViewBag.TransmissionTypes">
                    <option value="">-- Select Transmission Type --</option>
                </select>
                <span asp-validation-for="TransmissionType" class="text-danger"></span>
            </div>

            <!-- Year -->
            <div class="mb-3">
                <label asp-for="Year" class="form-label">Manufacture Year</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <!-- Mileage -->
            <div class="mb-3">
                <label asp-for="Mileage" class="form-label">Mileage (km)</label>
                <input asp-for="Mileage" class="form-control" />
                <span asp-validation-for="Mileage" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-success">Save Vehicle</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">← Back to Vehicle List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
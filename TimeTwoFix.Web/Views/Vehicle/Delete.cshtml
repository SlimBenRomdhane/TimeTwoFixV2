@model TimeTwoFix.Web.Models.VehicleModels.DeleteVehicleViewModel

@{
    ViewData["Title"] = "Delete Vehicle";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Deletion
            </h4>
        </div>

        <div class="card-body bg-light">
            <p class="text-danger fw-semibold">
                Are you sure you want to permanently delete the following vehicle?
            </p>
            <div class="row g-3">
                <div class="col-md-6">
                    
                    <input asp-for="Id" class="form-control" hidden />
                </div>
            </div>
            <div class="p-3 bg-white rounded border">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-muted">VIN:</dt>
                    <dd class="col-sm-8">@Model.Vin</dd>

                    <dt class="col-sm-4 text-muted">Brand:</dt>
                    <dd class="col-sm-8">@Model.Brand</dd>

                    <dt class="col-sm-4 text-muted">Model:</dt>
                    <dd class="col-sm-8">@Model.Model</dd>

                    <dt class="col-sm-4 text-muted">License Plate:</dt>
                    <dd class="col-sm-8">@Model.LicensePlate</dd>

                    <dt class="col-sm-4 text-muted">Fuel Type:</dt>
                    <dd class="col-sm-8">@Model.FuelType</dd>

                    <dt class="col-sm-4 text-muted">Transmission:</dt>
                    <dd class="col-sm-8">@Model.TransmissionType</dd>

                    <dt class="col-sm-4 text-muted">Year:</dt>
                    <dd class="col-sm-8">@Model.Year</dd>

                    <dt class="col-sm-4 text-muted">Mileage:</dt>
                    <dd class="col-sm-8">@Model.Mileage.ToString("N0") km</dd>
                </dl>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-between align-items-center bg-white">
            <form asp-action="Delete">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill me-1"></i> Delete Vehicle
                </button>
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </div>
    </div>
</div>
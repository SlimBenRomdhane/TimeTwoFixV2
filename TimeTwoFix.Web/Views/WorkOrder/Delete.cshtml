@model TimeTwoFix.Web.Models.WorkOrderModels.DeleteWorkOrderViewModel

@{
    ViewData["Title"] = "Delete Work Order";
}

<div class="row mt-5 justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center">Delete Work Order</h2>
                <div class="alert alert-warning text-center" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Are you sure you want to delete this work order?
                </div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.VehicleId)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.VehicleViewModel.Vin)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Mileage)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Mileage)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TolalLaborCost)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.TolalLaborCost)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Notes)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-warehouse btn-sm" title="Delete this work order">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm" title="Return to work order list">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
@model TimeTwoFix.Web.Models.ClientModels.DeleteClientViewModel

@{
    ViewData["Title"] = "Delete Client";
}

<div class="container mt-4">
    <h1 class="text-center text-danger">⚠ Confirm Client Deletion</h1>
    <p class="text-center text-muted">This action is irreversible. Please review the client details before proceeding.</p>

    <div class="card border-danger shadow-sm bg-light p-4">
        <div class="card-body">
            <div class="alert alert-warning text-center" role="alert">
                <strong>Are you sure you want to delete this client?</strong>
            </div>

            <div class="p-3 bg-white rounded">
                <dl class="row">
                    <dt class="col-sm-4 text-muted">Client ID:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                    <dt class="col-sm-4 text-muted">First Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                    <dt class="col-sm-4 text-muted">Last Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                    <dt class="col-sm-4 text-muted">Phone Number:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                    <dt class="col-sm-4 text-muted">Address:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Address), @Html.DisplayFor(model => model.City)</dd>

                    <dt class="col-sm-4 text-muted">Email:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 text-muted">Notes:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Notes)</dd>
                </dl>
            </div>

            <div class="d-flex justify-content-center mt-4 gap-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <form asp-action="Delete">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
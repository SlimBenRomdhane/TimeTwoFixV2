@model TimeTwoFix.Web.Models.ClientModels.DeleteClientViewModel

@{
    ViewData["Title"] = "Delete Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 py-4 bg-body-tertiary">
    <div class="container bg-white rounded shadow-sm p-4">

        <!-- ⚠️ Warning Header -->
        <h2 class="text-danger fw-semibold mb-2">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Client Deletion
        </h2>
        <p class="text-muted mb-4">This action is irreversible. Please review the client's details carefully.</p>

        <!-- ⚠️ Alert -->
        <div class="alert alert-warning text-center fw-semibold mb-4" role="alert">
            Are you sure you want to delete this client?
        </div>

        <!-- 👤 Client Info -->
        <div class="mb-4">
            <h5 class="text-secondary fw-semibold border-bottom pb-2 mb-3">
                <i class="bi bi-info-circle me-2"></i> Client Information
            </h5>
            <div class="row gy-3">
                <div class="col-md-6">
                    <span class="text-muted fw-semibold">Client ID:</span>
                    <div class="text-dark">@Model.Id</div>
                </div>
                <div class="col-md-6">
                    <span class="text-muted fw-semibold">Name:</span>
                    <div class="text-dark">@Model.FirstName @Model.LastName</div>
                </div>
                <div class="col-md-6">
                    <span class="text-muted fw-semibold">Phone:</span>
                    <div class="text-dark">@Model.PhoneNumber</div>
                </div>
                <div class="col-md-6">
                    <span class="text-muted fw-semibold">Email:</span>
                    <div class="text-dark">@Model.Email</div>
                </div>
                <div class="col-md-12">
                    <span class="text-muted fw-semibold">Address:</span>
                    <div class="text-dark">@Model.Address, @Model.City</div>
                </div>
                <div class="col-md-12">
                    <span class="text-muted fw-semibold">Notes:</span>
                    <div class="text-dark">@Model.Notes</div>
                </div>
            </div>
        </div>

        <!-- 🧭 Actions -->
        <div class="d-flex justify-content-end gap-3 pt-3 border-top">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <form asp-action="Delete">
                <button type="submit" class="btn btn-outline-danger">
                    <i class="bi bi-trash"></i> Yes, Delete Client
                </button>
            </form>
        </div>
    </div>
</div>
@model IEnumerable<TimeTwoFix.Web.Models.ClientModels.ReadClientViewModel>

@{
    ViewData["Title"] = "Clients List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">

            <!-- 🧭 Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary fw-bold mb-0">
                    <i class="bi bi-person-lines-fill me-2"></i> Clients Management
                </h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-lg me-1"></i> Add New Client
                </a>
            </div>
        </div>
    </div>

    <!-- 🔍 Search Accordion -->
    <div class="accordion mb-4" id="appointmentFilterAccordion">
        <div class="accordion-item border-0 shadow-sm">
            <h2 class="accordion-header" id="filterHeading">
                <button class="accordion-button collapsed fw-semibold" type="button"
                        data-bs-toggle="collapse" data-bs-target="#filterCollapse"
                        aria-expanded="false" aria-controls="filterCollapse">
                    <i class="bi bi-funnel-fill me-2 text-primary"></i> Filter Clients
                </button>
            </h2>
            <div id="filterCollapse" class="accordion-collapse collapse" aria-labelledby="filterHeading"
                 data-bs-parent="#appointmentFilterAccordion">
                <div class="accordion-body">
                    <form asp-action="Index" method="post" class="row gy-4">
                        <div class="col-md-3">
                            <label for="searchName" class="form-label fw-semibold text-secondary">Name</label>
                            <input type="text" name="searchName" id="searchName" class="form-control" placeholder="Search by name...">
                        </div>
                        <div class="col-md-3">
                            <label for="searchPhone" class="form-label fw-semibold text-secondary">Phone</label>
                            <input type="text" name="searchPhone" id="searchPhone" class="form-control" placeholder="Search by phone...">
                        </div>
                        <div class="col-md-3">
                            <label for="searchEmail" class="form-label fw-semibold text-secondary">Email</label>
                            <input type="text" name="searchEmail" id="searchEmail" class="form-control" placeholder="Search by email...">
                        </div>
                        <div class="col-md-3 d-flex flex-column justify-content-end gap-2">
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="bi bi-search me-1"></i> Search
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Reset
                            </a>
                            @if (User.IsInRole("GeneralManager"))
                            {
                                <a asp-action="LoadDeleted" class="btn btn-outline-danger">
                                    <i class="bi bi-trash me-1"></i> Show Deleted
                                </a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- ⚠️ TempData Alert -->
    @if (TempData["ClientError"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-info-circle me-1"></i> @TempData["ClientError"]
        </div>
    }

    <!-- 👥 Client Grid -->
    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm bg-workshop-card ">
                        <div class="card-body d-flex flex-column">

                            <!-- Name & Role -->
                            <div class="mb-3 text-center">
                                <h5 class="fw-bold text-dark mb-0">
                                    <i class="bi bi-person-circle text-primary me-1"></i>
                                    @item.FirstName @item.LastName
                                </h5>
                                @* <span class="small text-muted">Client Profile</span> *@
                            </div>

                            <!-- Contact Info -->
                            <div class="mb-3 text-center small text-muted">
                                <div class="mb-1">
                                    <i class="bi bi-phone me-1 text-secondary"></i>
                                    <span class="text-dark">@item.PhoneNumber</span>
                                </div>
                                <div class="mb-1">
                                    <i class="bi bi-geo-alt me-1 text-secondary"></i>
                                    <span class="text-dark">@item.City</span>
                                </div>
                                <div>
                                    <i class="bi bi-envelope me-1 text-secondary"></i>
                                    <span class="text-dark">@item.Email</span>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="d-flex justify-content-center gap-2 mt-auto pt-3 border-top">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                @if (User.IsInRole("GeneralManager"))
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    @* else
    {
        <div class="alert alert-info text-center mt-4">
            <i class="bi bi-info-circle me-1"></i> No clients found.
        </div>
    } *@
</div>
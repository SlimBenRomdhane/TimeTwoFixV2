@model TimeTwoFix.Web.Models.ClientModels.CreateClientViewModel

@{
    ViewData["Title"] = "Register New Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">

            <!-- 🧭 Header -->
            <h2 class="text-primary fw-bold mb-4">
                <i class="bi bi-person-plus me-2"></i> @ViewData["Title"]
            </h2>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- 🧍 Personal Information -->
                <div class="mb-5">
                    <h5 class="text-secondary fw-semibold mb-3">
                        <i class="bi bi-person-lines-fill me-2"></i> Personal Information
                    </h5>
                    <div class="row gy-3">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.FirstName, new { @class = "form-label fw-semibold text-secondary" })
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.LastName, new { @class = "form-label fw-semibold text-secondary" })
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <!-- 🏠 Contact Details -->
                <div class="mb-5">
                    <h5 class="text-secondary fw-semibold mb-3">
                        <i class="bi bi-geo-alt me-2"></i> Contact Details
                    </h5>
                    <div class="row gy-3">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Address, new { @class = "form-label fw-semibold text-secondary" })
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.City, new { @class = "form-label fw-semibold text-secondary" })
                            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label fw-semibold text-secondary" })
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label fw-semibold text-secondary" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <!-- 📝 Notes -->
                <div class="mb-5">
                    <h5 class="text-secondary fw-semibold mb-3">
                        <i class="bi bi-journal-text me-2"></i> Additional Notes
                    </h5>
                    <div>
                        @Html.LabelFor(m => m.Notes, new { @class = "form-label fw-semibold text-secondary" })
                        @Html.TextAreaFor(m => m.Notes, 4, 50, new { @class = "form-control", id = "notesTextarea" })
                        @Html.ValidationMessageFor(m => m.Notes, "", new { @class = "text-danger small" })
                    </div>
                </div>

                <!-- ✅ Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle me-1"></i> Register Client
                    </button>
                </div>
            </form>

            <!-- 🔙 Back Button -->
            <div class="d-grid mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to Client List
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("notesTextarea")?.addEventListener("input", function () {
            this.style.height = "auto";
            this.style.height = (this.scrollHeight) + "px";
        });
    </script>
}
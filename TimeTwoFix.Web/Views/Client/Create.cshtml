@model TimeTwoFix.Web.Models.ClientModels.CreateClientViewModel

@{
    ViewData["Title"] = "Register New Client";
}

<div class="container mt-4">
    <h1 class="text-center text-primary">Register a New Client</h1>
    <p class="text-center text-muted">Fill in the details below to register a new client.</p>

    <div class="card shadow-sm bg-light p-4">
        <form asp-action="CreateClient">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label text-dark"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label text-dark"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Address" class="form-label text-dark"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="City" class="form-label text-dark"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label text-dark"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label text-dark"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Notes" class="form-label text-dark"></label>
                    <textarea asp-for="Notes" class="form-control" rows="4" id="notesTextarea"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <input type="submit" value="Register Client" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Auto-expand Notes textarea as user types
        document.getElementById("notesTextarea").addEventListener("input", function () {
            this.style.height = "auto";
            this.style.height = (this.scrollHeight) + "px";
        });
    </script>
}
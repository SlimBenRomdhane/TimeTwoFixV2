@model TimeTwoFix.Web.Models.ClientModels.UpdateClientViewModel

@{
    ViewData["Title"] = "Edit Client";
}

<div class="container mt-4">
    <h1 class="text-center text-primary">Edit Client Information</h1>
    <p class="text-center text-muted">Modify the details below and save your changes.</p>

    <div class="card shadow-sm bg-light p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Id" class="form-label text-muted">Client ID</label>
                    <input asp-for="Id" class="form-control" disabled />
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label text-dark">First Name</label>
                    <input asp-for="FirstName" class="form-control" placeholder="Enter first name..." />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label text-dark">Last Name</label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter last name..." />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label text-dark">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label text-dark">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number..." />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-12">
                    <label asp-for="Address" class="form-label text-dark">Address</label>
                    <input asp-for="Address" class="form-control" placeholder="Enter address..." />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="City" class="form-label text-dark">City</label>
                    <input asp-for="City" class="form-control" placeholder="Enter city..." />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4 gap-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
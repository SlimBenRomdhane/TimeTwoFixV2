@model Tuple<List<ReadUserViewModel>, List<ReadRoleViewModel>>

<div class="row mt-5">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title">Available Roles</h4>
                @if (Model.Item2 != null && Model.Item2.Any())
                {
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Role Name</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model.Item2)
                            {
                                <tr>
                                    <td>@role.Name</td>
                                    <td>@role.Description</td>
                                    <td>@role.IsActive</td>
                                    <td>
                                        <a asp-controller="Role" asp-action="Edit" asp-route-name="@role.Name" class="btn btn-general btn-sm" title="Edit this role"><i class="fas fa-edit"></i> Edit</a>
                                        <a asp-controller="Role" asp-action="Delete" asp-route-name="@role.Name" class="btn btn-warehouse btn-sm" title="Delete this role"><i class="fas fa-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No roles found.</p>
                }
            </div>
        </div>
    </div>
</div>
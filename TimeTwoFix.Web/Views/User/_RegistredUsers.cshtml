@model Tuple<List<ReadUserViewModel>, List<ReadRoleViewModel>>

<div class="row mt-5">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title">Registered Users</h4>
                @if (Model.Item1 != null && Model.Item1.Any())
                {
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>User Type</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>Zip Code</th>
                                <th>Phone Number</th>
                                <th>Email</th>
                                <th>Hire Date</th>
                                <th>Years of Experience</th>
                                <th>Last Employer</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Item1)
                            {
                                <tr>
                                    <td>@user.UserType</td>
                                    <td>@user.FirstName @user.LastName</td>
                                    <td>@user.Address</td>
                                    <td>@user.City</td>
                                    <td>@user.ZipCode</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.Email</td>
                                    <td>@user.HireDate.ToShortDateString()</td>
                                    <td>@user.YearsOfExperience</td>
                                    <td>@user.LastEmployer</td>
                                    <td>@user.Status</td>
                                    <td>
                                        <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Email" class="btn btn-general btn-sm" title="Edit this user"><i class="fas fa-edit"></i> Edit</a>
                                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Email" class="btn btn-warehouse btn-sm" title="Delete this user"><i class="fas fa-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No users found.</p>
                }
            </div>
        </div>
    </div>
</div>
@* @using TimeTwoFix.Web.Models.UserModels
@model Tuple<List<ReadUserViewModel>, List<ReadRoleViewModel>> *@

@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <h2 class="text-center">User Management Dashboard</h2>

    <!-- User Actions -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Create New User</h5>
                    <p class="card-text">Select the type of user you want to create.</p>
                    <div class="d-grid gap-2">
                        <a asp-action="CreateMechanic" class="btn btn-mechanic" title="Create a new mechanic user"><i class="fas fa-wrench"></i> Mechanic</a>
                        <a asp-action="CreateWorkShopManager" class="btn btn-workshop" title="Create a new workshop manager"><i class="fas fa-tools"></i> Workshop Manager</a>
                        <a asp-action="CreateGeneralManager" class="btn btn-general" title="Create a new general manager"><i class="fas fa-briefcase"></i> General Manager</a>
                        <a asp-action="CreateAssistant" class="btn btn-assistant" title="Create a new front desk assistant"><i class="fas fa-headset"></i> Front Desk Assistant</a>
                        <a asp-action="CreateWareHouseManager" class="btn btn-warehouse" title="Create a new warehouse manager"><i class="fas fa-warehouse"></i> Warehouse Manager</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Create New Role</h5>
                    <div class="d-grid gap-2">
                        <a asp-action="CreateRole" class="btn btn-secondary" title="Create a new role"><i class="fas fa-user-tag"></i> Create New Role</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Roles List Section -->
    <partial name="_AvailableRoles" model="Model" />
    <!-- Users List Section -->
    <partial name="_RegistredUsers" model="Model" />
</div>
@model TimeTwoFix.Web.Models.CategoryModels.ReadCategoryViewModel

@{
    ViewData["Title"] = "Category Details";
}

<div class="row mt-5 justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">

                <!-- Header -->
                <h2 class="card-title text-center">
                    <i class="fas fa-tags me-2"></i> Category Summary
                </h2>

                <!-- Category Info -->
                <h5 class="text-dark mb-3">
                    <i class="fas fa-info-circle me-1"></i> Category Details
                </h5>

                <div class="row gy-2 mb-4">
                    <div class="col-md-6">
                        <label class="text-muted">Name</label>
                        <div class="fw-semibold">@Model.Name</div>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted">Description</label>
                        <div>@Model.Description</div>
                    </div>
                    <div class="col-md-12">
                        <label class="text-muted">Notes</label>
                        <div>@Model.Notes</div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="text-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-general btn-sm me-2" title="Edit this category">
                        <i class="fas fa-edit"></i> Edit Category
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm" title="Return to category list">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
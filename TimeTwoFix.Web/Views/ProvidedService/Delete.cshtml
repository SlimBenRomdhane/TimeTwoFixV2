@model TimeTwoFix.Web.Models.ProvidedServiceModels.DeleteProvidedServiceViewModel

@{
    ViewData["Title"] = "Delete Service";
}

<div class="container my-5">

    <!-- Header -->
    <h2 class="text-danger mb-4">
        <i class="bi bi-trash3-fill me-2"></i> Confirm Deletion
    </h2>

    <p class="lead text-muted">
        Are you sure you want to permanently delete this service? This action cannot be undone.
    </p>

    <!-- Details Card -->
    <div class="card border-danger shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">

                <dt class="col-sm-3 text-muted">Service ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-3 text-muted">Name</dt>
                <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 text-muted">Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3 text-muted">Estimated Time</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EstimatedTime)</dd>

                <dt class="col-sm-3 text-muted">Price Per Hour</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PricePerHour)</dd>

                <dt class="col-sm-3 text-muted">Category</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DeleteCategoryViewModel.Name)</dd>

                <dt class="col-sm-3 text-muted">Notes</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>
            </dl>
        </div>
    </div>

    <!-- Action Buttons -->
    <form asp-action="Delete" class="text-center">
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash-fill"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Cancel
        </a>
    </form>
</div>
@model TimeTwoFix.Web.Models.ProvidedServiceModels.ReadProvidedServiceViewModel

@{
    ViewData["Title"] = "Provided Service Details";
}

<div class="container my-5">

    <!-- Header -->
    <h2 class="text-primary mb-4">
        <i class="bi bi-info-circle me-2"></i> Provided Service Details
    </h2>

    <!-- Details Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row mb-0">

                <!-- Category -->
                <dt class="col-sm-3 text-muted">Category</dt>
                <dd class="col-sm-9 fw-semibold">
                    @Html.DisplayFor(model => model.ReadCategoryViewModel.Name)
                </dd>

                <!-- Name -->
                <dt class="col-sm-3 text-muted">Service Name</dt>
                <dd class="col-sm-9 fw-semibold">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <!-- Description -->
                <dt class="col-sm-3 text-muted">Description</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <!-- Estimated Time -->
                <dt class="col-sm-3 text-muted">Estimated Time (mns)</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.EstimatedTime)
                </dd>

                <!-- Price Per Hour -->
                <dt class="col-sm-3 text-muted">Price Per Hour</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PricePerHour)
                </dd>

                <!-- Notes -->
                <dt class="col-sm-3 text-muted">Additional Notes</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Notes)
                </dd>
            </dl>
        </div>
    </div>

    <!-- Actions -->
    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to Service List
        </a>
    </div>
</div>
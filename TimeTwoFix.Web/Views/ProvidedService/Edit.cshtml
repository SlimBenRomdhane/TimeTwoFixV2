@model TimeTwoFix.Web.Models.ProvidedServiceModels.UpdateProvidedServiceViewModel

@{
    ViewData["Title"] = "Edit Provided Service";
}

<div class="container my-5">

    <!-- Header -->
    <h2 class="text-primary mb-4">
        <i class="bi bi-pencil-square me-2"></i> Edit Provided Service
    </h2>

    <!-- Form Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Hidden ID -->
                <input asp-for="Id" type="hidden" />

                <div class="row g-3">

                    <!-- Category -->
                    <div class="col-md-6">
                        <label asp-for="CategoryId" class="form-label">Category</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    <!-- Name -->
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Service Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Engine Diagnostics" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <!-- Description -->
                    <div class="col-12">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <!-- Estimated Time -->
                    <div class="col-md-6">
                        <label asp-for="EstimatedTime" class="form-label">Estimated Time (mns)</label>
                        <input asp-for="EstimatedTime" class="form-control" placeholder="e.g. 2.5" />
                        <span asp-validation-for="EstimatedTime" class="text-danger small"></span>
                    </div>

                    <!-- Price Per Hour -->
                    <div class="col-md-6">
                        <label asp-for="PricePerHour" class="form-label">Price Per Hour</label>
                        <input asp-for="PricePerHour" class="form-control" type="number" placeholder="e.g. 75.00" />
                        <span asp-validation-for="PricePerHour" class="text-danger small"></span>
                    </div>

                    <!-- Notes -->
                    <div class="col-12">
                        <label asp-for="Notes" class="form-label">Additional Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Any extra context or notes"></textarea>
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="mt-4 d-grid">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Back Link -->
    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Service List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
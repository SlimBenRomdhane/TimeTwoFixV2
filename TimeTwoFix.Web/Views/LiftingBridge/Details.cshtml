@model TimeTwoFix.Web.Models.LiftingBridgeModels.ReadLiftingBridgeViewModel

@{
    ViewData["Title"] = "Bridge Details";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-info-circle me-2"></i> Bridge Details
            </h3>
        </div>
        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-4 fw-bold text-muted">ID</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4 fw-bold text-muted">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 fw-bold text-muted">Location</dt>
                <dd class="col-sm-8">@Model.Location</dd>

                <dt class="col-sm-4 fw-bold text-muted">Installation Date</dt>
                <dd class="col-sm-8">@Model.InstallationDate.ToString("dd MMM yyyy")</dd>

                <dt class="col-sm-4 fw-bold text-muted">Status</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-@(Model.Status == "Operational" ? "success" : "secondary")">@Model.Status</span>
                </dd>

                <dt class="col-sm-4 fw-bold text-muted">Load Capacity</dt>
                <dd class="col-sm-8">@Model.LoadCapacity kg</dd>

                <dt class="col-sm-4 fw-bold text-muted">Type</dt>
                <dd class="col-sm-8">@Model.Type</dd>

                <dt class="col-sm-4 fw-bold text-muted">Notes</dt>
                <dd class="col-sm-8 text-muted fst-italic">@Model.Notes</dd>
            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>